{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "version": 3,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "background": "#000000",
          "foreground": "#d7ff00",
          "template": "{{ if .SSHSession }}\udb82\udfc8 {{ else }}\uee15 {{ end }}"
        },
        {
          "type": "session",
          "style": "plain",
          "background": "#000000",
          "foreground": "#00ff00",
          "template": "{{ .UserName }} "
        },
        {
          "type": "session",
          "style": "plain",
          "background": "#000000",
          "foreground": "#d7ff00",
          "template": "{{ if .SSHSession }}\udb82\udd09 {{ else }}\uf197 {{ end }}"
        },
        {
          "type": "session",
          "style": "plain",
          "background": "#000000",
          "foreground": "#00ff00",
          "template": "{{ .HostName }}"
        }
      ]
    },
      {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "time",
          "style": "plain",
          "foreground": "#00ff00",
          "template": "\ue641 {{ now | date .Format }}",
          "properties": {
            "time_format": "3:04 PM (1/_2)"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#00ff00",
          "background": "#000000",
          "template": "\uf413"
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#00ff00",
          "background": "#000000",
          "properties": {
            "style": "folder",
            "home_icon": "\uee47",
            "mapped_locations": {
              "C:\\": "H",
              "\\": "H"
            }
          }
        }
      ]
    },
    {
      "type": "prompt",
      "newline": true,
      "alignment": "left",
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "properties": {
            "always_enabled": true
          },
          "foreground": "#00ff00",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#ff0000{{ end }}"
          ],
          "template": "-> "
        }
      ]
    }
  ]
}
